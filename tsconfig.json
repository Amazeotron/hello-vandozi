{
  "compilerOptions": {
    "target": "es2022",
    "moduleResolution": "node10",
    "esModuleInterop": true,
    "baseUrl": "./src",
    "paths": {
      "@src/*": ["*"],
      "@routes/*": ["routes/*"],
      "@utils/*": ["utils/*"]
    },
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  }
}
